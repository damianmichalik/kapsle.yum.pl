{% extends 'backend/base.html.twig' %}

{% import "backend/macro/buttons.html.twig" as buttons %}

{% block pageContent %}
    
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Podgląd użytkownika #{{ user.id }}
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="glyphicon glyphicon-dashboard"></i>  
                <a href="{{ path('admin_homepage') }}">Kokpit</a>
            </li>            
            <li>
                <i class="fa fa-user"></i>
                <a href="{{ path('admin_users_list') }}">Zarządzanie użytkownikami</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> 
                Podgląd użytkownika #{{ user.id }}
            </li>
        </ol>    
    </div>
</div>     

<div class="row">

    <div class="col-lg-12">

        <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Login</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>&nbsp;</th>
                        <td>
                            <div class="btn-group">                                
                                <a href="{{ path('admin_edit_user', {'id' : user.id}) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                                {% set deleteUrl = path('admin_delete_user', {'id': user.id}) %}
                                {{ buttons.delete(deleteUrl, 'Usuń', deleteTokenName, user.id) }}
                            </div>
                        </td>
                    </tr>                   
                </tbody>
            </table>
                    
            <a href="{{ path('admin_users_list', app.request.query.all) }}"><span class="glyphicon glyphicon-arrow-left"> Powrót</span></a>

        </div>

    </div>

</div>

{% endblock %}