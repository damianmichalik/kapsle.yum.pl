{% extends 'AppBundle::base.html.twig' %}

{% block breadcrumb %}
    <li>{{ cap.name }}</li>
{% endblock %}

{% block pageContainer %}

    <section id="caps-card">
        <h1>{{ cap.name }}</h1>
        <hr>
        <p>
            <span class="glyphicon glyphicon-time"></span> Dodany {{ cap.createDate|date('Y-m-d H:i') }}
        </p>
        <hr>
        <p>            
            <img src="{{ asset(cap.image) }}" alt="{{ cap.name }}">
        </p>        
    </section>

{% endblock %}