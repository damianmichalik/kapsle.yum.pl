{% extends 'AppBundle::base.html.twig' %}

{% block pageContainer %}

<ul class="listing row">
    
    {% for cap in pagination %}
    <li class="col-xs-4 col-sm-4 col-md-4 col-lg-4">     
        <div class="item">
            <a href="{{ path('caps_details', {'slug' : cap.slug}) }}">                
                <img class="img-thumb img-responsive" src="http://img.riccardo.pl/images/products/33600/balerinki-mel-by-melissa-mel-pop-viii-sp-black-beige-31538-51496_54cb47cf04947_p_lising.jpg" alt="{{ cap.name }}" border="0">                
                <span class="product-name">{{ cap.name }}</span>
            </a>
        </div>        
    </li>
    {% endfor %}
    
</ul>
    
{{ knp_pagination_render(pagination, 'AppBundle:Pagination:pagination.html.twig') }}    

{% endblock %}