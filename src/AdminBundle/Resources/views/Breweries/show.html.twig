{% extends 'AdminBundle::base.html.twig' %}

{% block pageContent %}
    
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Podgląd browaru  #{{ brewery.id }}
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="glyphicon glyphicon-dashboard"></i>  
                <a href="{{ path('admin_homepage') }}">Kokpit</a>
            </li>            
            <li>
                <i class="fa fa-beer"></i> 
                <a href="{{ path('admin_breweries_list') }}">Zarządzanie browarami</a>
            </li>
            <li class="active">
                <i class="fa fa-file"></i> 
                Podgląd browaru  #{{ brewery.id }}
            </li>
        </ol>    
    </div>
</div>     

<div class="row">

    <div class="col-lg-12">

        <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ brewery.id }}</td>
                    </tr>
                    <tr>
                        <th>Nazwa</th>
                        <td>{{ brewery.name }}</td>
                    </tr>
                    <tr>
                        <th>Miejscowość</th>
                        <td>{{ brewery.city }}</td>
                    </tr>
                    <tr>
                        <th>Adres</th>
                        <td>{{ brewery.address }}</td>
                    </tr>
                    {% if brewery.postcode is not null %}
                    <tr>
                        <th>Kod pocztowy</th>
                        <td>{{ brewery.postcode }}</td>
                    </tr>
                    {% endif %}
                    {% if brewery.lat is not null and brewery.lng is not null %}
                        <tr>
                            <th>Położenie</th>
                            <td>
                                <div id="map">
                                    <div id="map_canvas" style="border:1px solid #ccc;width:100%; height:400px"></div>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                    <tr>
                        <th>&nbsp;</th>
                        <td>
                            <div class="btn-group">                                
                                <a href="{{ path('admin_brewery_form_action', {'id' : brewery.id}) }}" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></a>
                                {% set tokenName = csrfProvider.getToken(deleteTokenName|format(brewery.id)) %}
                                {% set deleteUrl = path('admin_delete_brewery', {'id': brewery.id, 'token': tokenName}) %}
                                <a href="{{ deleteUrl }}" class="btn btn-danger btn-sm" data-confirmaction=""><span class="glyphicon glyphicon-trash"></span></a>
                            </div>
                        </td>
                    </tr>                   
                </tbody>
            </table>
                    
            <a href="{{ path('admin_breweries_list', app.request.query.all) }}"><span class="glyphicon glyphicon-arrow-left"> Powrót</span></a>

        </div>

    </div>

</div>

{% endblock %}

{% if brewery.lat is not null and brewery.lng is not null %}
    {% block javascripts %}

        {{ parent() }}

        <script type="text/javascript">

            var map;
            var marker;
            var geocoder;
            var centerChangedLast;
            var reverseGeocodedLast;
            var currentReverseGeocodeResponse;

            function initGoogleMaps() {
                var latlng = new google.maps.LatLng({{ brewery.lat }}, {{ brewery.lng }});
                var myOptions = {
                    zoom: 16,
                    center: latlng,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };

                map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
                geocoder = new google.maps.Geocoder();

                marker = new google.maps.Marker({
                    position: latlng,
                    draggable: false
                });
                marker.setMap(map);

            }

            window.onload = function() {

                var googleMapsScriptIncluded = false;
                var scripts = document.getElementsByTagName("script");
                for(var i = 0; i < scripts.length; i++) {
                    if (scripts[i].src.indexOf('maps.google.com/maps/api/js') != -1) {
                        googleMapsScriptIncluded = true;
                        initGoogleMaps();
                    }
                }

                if (!googleMapsScriptIncluded) {
                    var head = document.getElementsByTagName('head').item(0);
                    var script = document.createElement('script');
                    script.setAttribute('type', 'text/javascript');
                    script.setAttribute('src', 'http://maps.google.com/maps/api/js?sensor=false&key=AIzaSyCBSPNX08cXOYUZabQC6FjeZu0rQXJWzms&callback=initGoogleMaps');
                    head.appendChild(script);
                }

            };


        </script>

    {% endblock %}
{% endif %}